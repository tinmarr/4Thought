extends layout 

block layout-content
    .d-flex.h-100.flex-column
        .mx-4.mt-4.position-relative
            input.w-75.h1.border-0.outline-0#notename(placeholder="name your note", spellcheck="false", type="text")
            a.btn.float-end#close(href="./dashboard")
                i.far.fa-times.fa-2x.text-secondary
        .mx-4.mt-2.pb-4.d-flex.flex-row.flex-grow-1
            .shadow-lg.rounded.bg-body.me-2.flex-grow-1.d-flex.flex-column.position-relative
                #toolbar
                    span.ql-formats
                        select.ql-align
                        select.ql-header
                        button.ql-clean
                    span.ql-formats
                        button.ql-bold
                        button.ql-italic
                        button.ql-underline
                    span.ql-formats 
                        select.ql-color
                        select.ql-background
                    span.ql-formats
                        button.ql-script(value="sub")
                        button.ql-script(value="super") 
                    span.ql-formats 
                        button.ql-image
                        button.ql-video
                        button.ql-formula
                        button.ql-link
                    span.ql-formats
                        button.text-shortcuts.p-0#add-texting-shortcuts(data-bs-toggle="popover")
                            i.fas.fa-book-open
                            span.invisible#text-shortcuts-popover
                                input#in(type="text", class="form-control", placeholder="IN")
                                input.my-2#out(type="text", class="form-control", placeholder="OUT")
                                a#txtModeToggle(class="btn btn-outline-primary", role="button", type="button", data-bs-toggle="button") Txt Mode 
                                a#SubmitNewDefinition(class="btn btn-outline-secondary", type="button", role = "button") Submit definition  
                    span.ql-formats 
                        button.p-0#speakSelection 
                            i.fas.fa-volume

                    span.ql-formats.float-end
                        button.position-relative.p-0#info-btn
                            i.fas.fa-info-circle
                            span.tooltip-left.d-none.shadow-lg#infottip
                                p Looking for a formatting tool? 4Thought uses Markdown syntax to streamline the typing process; you can also use common keyboard shortcuts.
                                hr
                                span#save-time
                        button.p-0#downloadPDF 
                            i.fas.fa-arrow-to-bottom
                        button.p-0#sync-btn
                            i.fas.fa-sync-alt
                .flex-grow-1#editor
            .sortable.shadow-lg.rounded.d-flex.d-none.flex-column.p-2.me-2.position-relative#widgets
            .shadow-lg.rounded.bg-body.d-flex.flex-column.py-2.position-relative#suggestions
                button.btn.widget-btn.mx-1.fw-bold#searchWiki
                    i.fab.fa-wikipedia-w.fa-lg
                button.btn.widget-btn.mx-1.fw-bold#searchDic
                    i.far.fa-atlas.fa-lg
                button.btn.widget-btn.mx-1.fw-bold#newComment 
                    i.far.fa-comment-alt-lines.fa-lg
                button.btn.widget-btn.mx-1.fw-bold#newYoutube 
                    i.fab.fa-youtube.fa-lg
                button.btn.widget-btn.mx-1.fw-bold#newRecording 
                    i.far.fa-microphone.fa-lg
    script(src="./documentManager.js")
    script(src="./Widget.js")
    script(src="./WidgetTypes.js") 
    script(src="./dictionary.js")
    script(src="./editor.bundle.js", note-id=identifier, doc-data=documentData, defer)
    script(src="./dragManager.bundle.js", doc-parent=title)