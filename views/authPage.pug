extends layout 

block layout-content
    form.w-50.mx-auto.my-4.border.border-5.border-secondary.rounded.p-3#authForm(action="./user", method="post")
        if newUser
            h3.mb-3 Sign Up 
            .mb-3
                label.form-label(for="name") Username 
                input.form-control#name(type="name", name="name", placeholder="your amazing name")
            .mb-3
                label.form-label(for="email") Email Address 
                input.form-control#email(type="email", name="email", placeholder="your.email@example.com")
            .mb-3
                label.form-label(for="password") Password
                input.form-control#password(type="password", name="password")
            .mb-3
                label.form-label(for="password-confirm") Confirm Password
                input.form-control#password-confirm(type="password", name="password-confirm")
            input.d-none#newUser(type="checkbox" name="newUser" checked)
            button.btn.btn-primary(type="submit") Sign Up
            br
            a(href="./user?new=false") Already have an account?
        else
            h3.mb-3 Log In
            .mb-3
                label.form-label(for="email") Email Address 
                input.form-control#email(type="email", name="email", placeholder="your.email@example.com")
            .mb-3
                label.form-label(for="password") Password
                input.form-control#password(type="password", name="password")
            input.d-none#newUser(type="checkbox" name="newUser")
            button.btn.btn-primary(type="submit") Log In
            br
            a(href="./user?new=true") Need a new account?
        .m-0.p-0.text-danger#alerts
        script(src="./loginManager.js", new-user=newUser.toString(), defer)
