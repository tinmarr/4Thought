block variables
doctype html
html(lang="en")
    head
        link(rel="shortcut icon", type="image/png", href="./4_thought.png")
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js", integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf", crossorigin="anonymous") 
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css", integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6", crossorigin="anonymous")
        script(src="https://code.jquery.com/jquery-3.6.0.min.js", integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=", crossorigin="anonymous")
        script(src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js", type="text/javascript")
        script(src="./libs/fontAwesomeKit.min.js") 
        script(src="./libs/html2pdf.bundle.min.js") 
        link(rel="stylesheet", href="./snow.min.css")
        link(rel="stylesheet", href="./styles.css")

        link(rel="stylesheet", href="./katex.min.css")
        script(src="./katex.min.js") 

        script(src="./quill.min.js")
          
        link(rel="stylesheet", href="./mathquill.css")
        script(src="./mathquill.min.js") 
        
        link(rel="stylesheet", href="./mathquill4quill.min.css")
        script(src="./mathquill4quill.min.js")
        
        title #{title} | 4Thought
    body
        if error_messages 
            each message in error_messages 
                .alert.alert-warning.alert-dismissible.fade.show.m-0(role="alert")
                    strong Oh Noes! 
                    |  #{message}
                    button.btn-close(data-bs-dismiss="alert")
        if success_messages 
            each message in success_messages 
                .alert.alert-success.alert-dismissible.fade.show.m-0(role="alert")
                    strong Yay! 
                    |  #{message}
                    button.btn-close(data-bs-dismiss="alert")
        .position-relative.h-100#root
            block layout-content 
        script(src="makeHTTPS.js")