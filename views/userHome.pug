extends layout 

block layout-content 
    div.w-95.mx-auto.mt-4
        div.position-relative
            a.btn.btn-secondary.position-absolute.top-50.end-0.translate-middle-y(href="./logout") logout
            h1 #{userData.name}'s notes
        a.btn.btn-primary(href="./document") new notepad
        .sortable
            each document in Object.keys(userData.documents)
                .w-75.drag(id=document)
                    hr(id="bar"+document)
                    .my-3.d-flex.align-middle(id=document)
                        .m-0.py-2.d-inline
                            | #{userData.documents[document].name}
                            - let redirect = "./document?id=" + document
                        .flex-grow-1
                        .m-0.p-0.d-inline
                            a.btn.btn-secondary.mx-1(href=redirect) Edit
                            a.btn.btn-outline-danger.mx-1(onclick="deleteDoc(" + document + ")", id="delete" + document) Delete
        if Object.keys(userData.documents).length != 0
            .my-3.invisible#noneLeft
                hr.w-75
                | No Documents Yet!
        else
            .my-3#noneLeft
                hr.w-75
                | No Documents Yet!
    script(src="./dragManager.js")
    script(src="./documentManager.js") 
    script
        | numOfDocs = !{Object.keys(userData.documents).length}